<h2><%= @post.name %></h2>
<p><%= @post.content %></p>
<form action='/posts/<%= @post.id %>' method='post'>
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Post Title: <input name='name' type='text'></label>
  <label>Post Content:
    <textarea name="content" rows="8" cols="80"></textarea></label>
    <input type='submit' value='submit'>
</form>
